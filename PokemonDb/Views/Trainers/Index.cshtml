@{
    Layout = "_Layout";
}

@using PokemonDb.Models;
@model List<PokemonDb.Models.Trainer>;

<h1>Pokemon Trainers</h1>
<hr />

@if (@Model.Count == 0)
{
    <h3>No Pokemon trainers present!</h3>
}

@foreach (Trainer trainer in Model)
{
    <h3>@Html.ActionLink($"{trainer.TrainerName}", "Details", new { id = trainer.TrainerId })</h3>
}
<hr />
<h4>@Html.ActionLink("Add A Trainer", "Create")</h4>
<h4>@Html.ActionLink("Home", "Index", "Home")</h4>