@{
    Layout = "_Layout";
}

@using PokemonDb.Models;
@model IEnumerable<PokemonDb.Models.Pokemon>

<h1>Your Pokemon!</h1>
<hr />

@if (Model.Any())
{
    <ul>
    @foreach (Pokemon pokemon in Model)
        {
            <li>@Html.ActionLink($"{pokemon.PokemonName}","Details", new { id = pokemon.PokemonId })</li>
        }
    </ul>
}
else
{
    <h3>No Pokemon have been added to the Pokedex!</h3>
}

<h4>@Html.ActionLink("Add new Pokemon", "Create")</h4>

<h4>@Html.ActionLink("Home", "Index", "Home")</h4>
