@{
    Layout = "_Layout";
}

@using PokemonDb.Models;
@model List<PokemonDb.Models.PokeType>;

<h1>Pokemon Types</h1>
<hr />

@if (@Model.Count == 0)
{
    <h3>No Pokemon types have been added to your pokedex!</h3>
}

@foreach (PokeType pokeType in Model)
{
    <h3>@Html.ActionLink($"{pokeType.PokeTypeName}", "Details", new { id = pokeType.PokeTypeId })</h3>
}
<hr />
<h4>@Html.ActionLink("Add New Type", "Create")</h4>
<h4>@Html.ActionLink("Home", "Index", "Home")</h4>