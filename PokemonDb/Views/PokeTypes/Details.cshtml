@{
    Layout = "_Layout";
}

@model PokemonDb.Models.PokeType;

<h1>Pokemon Type Details:</h1>
<hr />
<h2>Pokemon Type: @Html.DisplayFor(model => model.PokeTypeName)</h2>
<hr />

@if (Model.Pokemons.Count == 0)
{
    <p>This Pokemon type does not contain any Pokemon.</p>
}
else
{
    <h3>Pokemon: </h3>
    
    @foreach (var join in Model.Pokemons)
        {
            <h4>@join.Pokemon.PokemonName</h4>
        }
   
}
<hr />
<h4>@Html.ActionLink("Back to Pokemon Type List", "Index")</h4>
<h4>@Html.ActionLink("Edit Pokemon Type", "Edit", new { id = Model.PokeTypeId})</h4>
<h4>@Html.ActionLink("Delete Pokemon Type", "Delete", new { id = Model.PokeTypeId})</h4>
<h4>@Html.ActionLink("Home", "Index", "Home")</h4>